generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int     @id @default(autoincrement())
  nome  String  
  idade Int

@@map("users")
}

model Administrador {
  id        Int      @id @default(autoincrement())
  nome      String
  email     String   @unique
  senha     String // IMPORTANTE: Em produção, sempre armazene o hash da senha!
  telefone  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("administradores")
}

model Cliente {
  id             Int        @id @default(autoincrement())
  nome           String
  email          String     @unique
  cpf            String     @unique
  telefone       String?
  dataNascimento DateTime   @db.Date
  visitas        Visita[] // Relação: Um cliente pode ter várias visitas agendadas
  createdAt      DateTime   @default(now())
  updatedAt      DateTime   @updatedAt

  @@map("clientes")
}

model Corretor {
  id            Int        @id @default(autoincrement())
  nome          String
  email         String     @unique
  creci         String     @unique
  visitas       Visita[] // Relação: Um corretor pode ter vários agendamentos de visitas
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt

  @@map("corretores")
}

model Visita {
  id         Int      @id @default(autoincrement())
  dataHora   DateTime
  unidade    String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  clienteId  Int
  corretorId Int

  // Relações (chaves estrangeiras)
  cliente    Cliente    @relation(fields: [clienteId], references: [id])
  corretor   Corretor   @relation(fields: [corretorId], references: [id])

  @@map("visitas") // Nome da tabela no banco de dados
}

model Unidade